.faq
  &__panel
    display flex

  &__panel-info
    align-self flex-end
    padding-left 15px

  &__panel-title
    font-family 'Montserrat Bold'
    font-size 18px
    line-height 14px
    line-height 22px
    color #000

  &__subtitle
    font-size 11px
    line-height 24px
    color #979797

  &__body
    padding 25px 55px 40px 75px

  &__navigation
    margin-bottom 36px

  &__list
    list-style-type none
    margin 0
    padding 0

  &__list-item
    & + &
      margin-top -6px

  &__link
    font-size 11px
    line-height 18px
    color #979797

    &:hover,
    &:active
      color #1FC4F4
      text-decoration none

  &__block
    display flex
    position relative

    & + &
      margin-top 47px

  &__info
    width 75px
    position absolute
    transform rotate(-90deg)
    left -75px
    top 25px

    &--order
      top 190px

  &__info-title
    font-size 20px
    line-height 24px
    color #DADADA
    white-space nowrap

  &__text
    font-size 14px
    line-height 24px

    & + &
      margin-top 24px